<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/headline_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@color/colorAccent" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-100dp"
        android:src="@drawable/headline_background"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:id="@+id/txt_kabar_terbaru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/headline_title"
        android:layout_marginLeft="18dp"
        android:text="Kabar Terbaru"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/headline_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/headline_time"
        android:layout_marginLeft="18dp"
        android:maxLines="2"
        android:textStyle="bold"
        android:text="Judul Kabar"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/headline_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/separator"
        android:layout_marginLeft="18dp"
        android:text="time"
        android:textAppearance="@style/Base.Widget.AppCompat.Button.Small"
        android:textColor="#FFFFFF" />

    <RelativeLayout
        android:id="@+id/separator"
        android:layout_width="50dp"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF" />

</RelativeLayout>
