<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.salmanitb.alumnisalman.fragment.RegistrationJobFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/txt_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/warning"
            android:padding="10dp"
            android:textColor="@color/white"
            android:visibility="gone" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:text="Pekerjaan"
            android:textAppearance="@style/TextAppearance.AppCompat.Notification.Info" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginBottom="10dp"
            android:background="@color/separator" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profesi"
            android:textAppearance="@style/TextAppearance.Design.Hint" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dapat pilih lebih dari satu. Jika tidak terdapat dalam pilihan, silahkan isi pada kolom lainnya"
            android:textAppearance="@style/Widget.AppCompat.Button.Small" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/leftColumn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/rightColumn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

            </LinearLayout>
        </LinearLayout>

        <CheckBox
            android:id="@+id/checkbox_others"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lainnya" />

        <EditText
            android:id="@+id/input_others"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/edit_text_background_disabled"
            android:enabled="false"
            android:hint="Pekerjaan lainnya yang belum ada di atas"
            android:lines="1"
            android:maxLines="1"
            android:padding="5dp"
            android:singleLine="true"
            android:textSize="12sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Instansi"
            android:textAppearance="@style/TextAppearance.Design.Hint" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pisahkan dengan koma untuk lebih dari satu instansi"
            android:textAppearance="@style/Widget.AppCompat.Button.Small" />

        <EditText
            android:id="@+id/input_company"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/edit_text_background"
            android:lines="1"
            android:maxLines="1"
            android:padding="5dp"
            android:singleLine="true" />


    </LinearLayout>


</FrameLayout>
