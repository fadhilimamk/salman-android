        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyC_4iTLKM1ZZYjM-7OxCOAxFFtcNKQOiKA" />

        <activity android:name=".activity.MainActivity" />
        <activity android:name=".activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.RegisterActivity" />
        <activity android:name=".activity.RegisterFormActivity" />
        <activity
            android:name=".activity.ReadPostActivity"
            android:parentActivityName=".activity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.salmanitb.alumnisalman.activity.MainActivity" />
        </activity>
        <activity android:name=".activity.ConfirmActivity"></activity>
        <activity android:name=".activity.SearchActivity" />
        <activity android:name=".activity.EditProfileActivity"></activity>
